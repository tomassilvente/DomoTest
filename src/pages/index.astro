---
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import Hero from '../components/Hero.astro'
import Services from '../components/Services.astro'
import Technologies from '../components/Technologies.astro'
import Clients from '../components/clients.astro'
import Touch from '../components/touch.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
	<div class="bg mx-auto">
		<Header />
			<div class="hero">
				<Hero />
			</div>
		
		<div class="services">
			<Services />
			<div class="tech">
				<Technologies />
			</div>
		</div>
		<div class="bg-white clients">
			<Clients />
			<Touch />
		</div>	
		<Footer />
	</div>
</Layout>
<style>
	.hero{
		padding: 12%;
	}
	body{
		background-color: rgba(40,51,69,255);
	}
	.bg{
			max-width: 1600px;
			background: url(../../public/assets/asset-background.jpg);
			background-size: 580px;
			background-position: top right;
			background-repeat: no-repeat;
	}
	.services{
		position: relative;
	}
	.tech{
		padding: 12%;
		margin-top: 28%;
		padding-top: 24%;
		background: rgba(56,113,255,255);
		background-position: bottom;
	}
	.clients{
		padding-top: 10%;
		padding-bottom: 290px ;
	}
</style>
